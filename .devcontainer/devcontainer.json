// https://aka.ms/devcontainer.json
{
	"name": "Existing Docker Compose (Extend)",
	"dockerComposeFile": [
		"../docker-compose.yml"
	],
	"service": "laravel.test",
	"workspaceFolder": "/var/www/html",
	"customizations": {
		"vscode": {
			"extensions": [
				// "mikestead.dotenv",
				// "amiralizadeh9480.laravel-extra-intellisense",
				// "ryannaddy.laravel-artisan",
				// "onecentlin.laravel5-snippets",
				// "onecentlin.laravel-blade"
			],
			"settings": {}
		}
	},
	"remoteUser": "sail",
	"runArgs": [
		"--env-file",
		".env.example"
	],
	"postCreateCommand": "chown -R 1000:1000 /var/www/html 2>/dev/null && cp .env.example .env && composer install && php artisan key:generate && php artisan migrate --force --seed && bun install"
	// "forwardPorts": [],
	// "runServices": [],
	// "shutdownAction": "none",
}
